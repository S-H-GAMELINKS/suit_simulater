<div class="hopes">
  <div class="container">
    <p class="text-center">あなたが着てみたいスーツの色をボックスの中から選択してください</p>
      <div class="row wrap-reverse">
        <div class="suit_pic col-md-6 text-center">
          <%= image_tag "navy1.jpg", alt:"ネイビー", class:"navy section size" %>
          <%= image_tag "right-gray1.jpg", alt:"グレー", class:"gray section size" %>
          <%= image_tag "black1.jpg", alt:"ブラック", class:"black section size" %>
          <%= image_tag "beige1.jpg", alt:"ベージュ", class:"beige section size" %>
          <%= image_tag "check1.jpg", alt:"チェック", class:"check section size" %>
          <%= image_tag "windowp1.jpg", alt:"ウィンドウペン", class:"wp section size" %>
        </div>
        <div class="col-md-6">
          <%= form_for @suit_color, url: result_suit_path, html:{id:"sample"} do |f| %>
            <div class="main-box">
              <div class="sub-box">
                <%= f.label :ネイビー %>
                <div class="pattern-navy secList" id="navy" value="ネイビー">
                </div>
              </div>
              <div class="sub-box">
                <%= f.label :グレー %>
                <div class="pattern-gray secList" id="gray">
                </div>
              </div>
              <div class="sub-box">
                <%= f.label :ブラック %>
                <div class="pattern secList" id="black">
                </div>
              </div>
              <div class="sub-box">
                <%= f.label :ベージュ %>
                <div class="pattern-beige secList" id="beige">
                </div>
              </div>
              <div class="sub-box">
                <%= f.label :チェック %>
                <div class="pattern-check secList" id="check">
                </div>
              </div>
              <div class="sub-box">
                <%= f.label :ウィンドウペン %>
                <div class="pattern-wp secList" id="wp">
                </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="btn_to_final">
      <%= f.hidden_field :suit_color, id:"sample" ,class: 'form-control' %> #jsで要素を渡すようにする
      <%= f.submit "これで決定！", class: "btn btn-primary" %> #コントローラーで渡すように書き換え
      <% end %>
    </div>
</div>
